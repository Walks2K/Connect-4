        <ComboBox Margin="510,10,10,0" IsSynchronizedWithCurrentItem="False" VerticalAlignment="Top" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Player versus Player" IsSelected="True" />
            <ComboBoxItem Content="Player versus AI" />
            <ComboBoxItem Content="AI versus AI" />
        </ComboBox>
        <Button Content="New Game" VerticalAlignment="Bottom" Margin="510,2,10,5" Click="Button_Click_1" />
        <CheckBox Content="Player 1 Is Red?" HorizontalAlignment="Left" Margin="510,40,0,0" VerticalAlignment="Top" IsChecked="True" Checked="CheckBox_Toggle" Unchecked="CheckBox_Toggle" />
